                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="AddressCard" Width="40" Foreground="#2596be"/>
                    <TextBlock><Underline><Run Text="V"/></Underline><Run Text="iew"/></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>

