                    <TextBlock>
                    <Underline>U</Underline>pdate
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
                -->
        <Button Margin="0,65,155,0" VerticalAlignment="Top" Command="{Binding Path=DeleteCommand}" Height="35" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" Width="125">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Trash" Width="40" Foreground="#2596be"/>
                    <TextBlock>
                    <Underline>D</Underline>elete
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>


        <Button Margin="0,65,10,0" VerticalAlignment="Top" Click="AddStudentBtn_Click"  Height="35" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right" Width="175" >
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Stethoscope" Width="40" Foreground="#2596be"/>
                    <TextBlock>
                    New <Underline>E</Underline>xamination
                    </TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Page>
