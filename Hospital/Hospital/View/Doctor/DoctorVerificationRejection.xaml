<Window x:Class="Hospital.View.Doctor.DoctorVerificationRejection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View.Doctor"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="DoctorVerificationRejection" Height="423" Width="389">
    <Grid>
        <Label Content="Rejection Reason: " HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="111"></Label>
        <TextBox x:Name="MedicineRejectionText" HorizontalAlignment="Center" Margin="0,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="170"/>
        <Button Content="Reject" HorizontalAlignment="Left" Margin="258,283,0,0" VerticalAlignment="Top" Height="30" Width="56" Click="RejectButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="74,283,0,0" VerticalAlignment="Top" Height="30" Width="56" Click="CancelButton_Click"/>
    </Grid>
</Window>
